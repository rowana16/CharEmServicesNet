@model CharEmServicesNet.Models.ViewModels.AdminIndexViewModel
@using CharEmServicesNet.UserHelpers
@{ 
    ViewBag.Title = "Users";
}

<div class="jumbotron">
    <h1>Manage System Users</h1>

</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h3>@Html.ActionLink("Invite a New User", "Invite", "Account")</h3>
    </div>
</div>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                string phone = user.PhoneNumber;
                <tr>
                    <td>@Html.DisplayFor(x => user.DisplayName)</td>
                    <td>@Html.DisplayFor(x => user.Email) </td>                    
                    <td>@Html.DisplayForPhone(phone) </td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Admin", new { id = user.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Edit", "Update", "Admin", new { id = user.Id }, new { @class = "btn btn-primary"}) 
                        @Html.ActionLink("Delete","Delete", "Admin", new { id = user.Id}, new { @class = "btn btn-primary"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Return to Home","index","home")
</div>