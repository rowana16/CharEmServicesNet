@model CharEmServicesNet.Models.ViewModels.LocationEditViewModel
@{
    ViewBag.Title = "Location Details";
}

<h2>Edit Location</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model => Model.Id)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4"><h4>Location Name:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(Model => Model.LocationName, new { style = "width:350px" })
                @Html.ValidationMessageFor(Model => Model.LocationName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Short Description:</h4>     </div>
            <div class="col-md-8">
                @Html.TextAreaFor(Model => Model.LocationDescription, new { style = "width:500px" })

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>City:</h4>     </div>
            <div class="col-md-8">
                <table>
                    <tr>
                        <td>Current City:</td>
                        <td>@Html.DisplayFor(Model => Model.CurrentCity.Name)</td>
                    </tr>
                    <tr>
                        <td>Change City:</td>
                        <td>@Html.DropDownListFor(Model => Model.SelectedCity, Model.CitiesSelect)</td>
                    </tr>
                </table>

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>County:</h4>     </div>
            <div class="col-md-8">
                <table>
                    <tr>
                        <td>Current City:</td>
                        <td>@Html.DisplayFor(Model => Model.CurrentCounty.Name)</td>
                    </tr>
                    <tr>
                        <td>Change City:</td>
                        <td>@Html.DropDownListFor(Model => Model.SelectedCounty, Model.CountiesSelect)</td>
                    </tr>
                </table>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </div>

        @Html.ActionLink("Return to List", "Index")

    </div>
}