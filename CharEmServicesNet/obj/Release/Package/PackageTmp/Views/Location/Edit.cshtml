@model CharEmServicesNet.Models.ViewModels.LocationOperationViewModel
@{
    ViewBag.Title = "Location Details";
}

<h2>Edit Location</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2"><h4>Location Name:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.LocationName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Short Description:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.LocationDescription)
            </div>
        </div>     
      
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value=" Edit " class="btn btn-primary" />
            </div>
        </div>

        @Html.ActionLink("Return to the Location Index", "Index")

    </div>
}