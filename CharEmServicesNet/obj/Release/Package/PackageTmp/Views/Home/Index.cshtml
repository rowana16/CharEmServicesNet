@model CharEmServicesNet.Models.ViewModels.MainViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="row" id="home-jumbo">
    <div class="col-md-4">
        <img id="home-logo" src="~/Content/Images/char-em.png" />
    </div>
    <div class="jumbotron">
        <h2><span class="glyphicon glyphicon-info-sign"></span>Services Meeting Point</h2>
    </div>
</div>


<div class="row">
    @if (Model.IsAdmin)
    {
        <div class="col-md-2">
            <div class="admin">
                <h2>Site Admin</h2>
                <h4>@Html.ActionLink("Manage Providers", "index", "ServiceProvider", null, new { @class = "btn btn-primary adminBtn" })</h4>
                <h4>@Html.ActionLink("Manage Services", "index", "Service", null, new { @class = "btn btn-primary adminBtn" })</h4>
                <h4>@Html.ActionLink("Manage Locations", "index", "Location", null, new { @class = "btn btn-primary adminBtn" })</h4>
                <h4>@Html.ActionLink("Users / Invite", "index", "Admin", null, new { @class = "btn btn-primary adminBtn" })</h4>
            </div>
        </div>
    }

    @if (Model.IsProvider)
    {
        <div class="col-md-2">
            <div class="providers">
                <h2>Org Admin</h2>
                <h4>@Html.ActionLink("Manage Details", "Edit", "ServiceProvider", new { id = Model.ProviderId }, new { @class = "btn btn-primary adminBtn" }) </h4>
            </div>
        </div>
    }

    <div class="col-md-10">
        <div class="panel panel-primary">
            <div class="panel panel-heading">
                <h2>Find Services Available to You:</h2>
            </div>
            <div class="panel panel-body">
                <h4>Select Any County, City and / Or School:</h4>
                <hr />
                <div class="row">
                    <div class="col-md-2">
                        <h4>County:</h4>
                        @Html.DropDownListFor(x => x.selectedCounty, Model.CountyList)
                    </div>
                    <div class="col-md-3">
                        <h4>City:</h4>
                        @Html.DropDownListFor(x => x.selectedCity, Model.CityList)
                    </div>
                    <div class="col-md-7">
                        <h4>School:</h4>
                        @Html.DropDownListFor(x => x.selectedSchool, Model.SchoolList)
                    </div>

                </div>


                <div class="row">
                    <button class="btn btn-primary" id="submitLocation"><span class="glyphicon glyphicon-search"></span>Search</button>
                </div>
                <hr />
                <div id="locationPartial">
                    <div id="loading">
                        <img src="~/Content/Images/ajax-loader.gif" />
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>