@model CharEmServicesNet.Models.ViewModels.ServiceOperationViewModel
@{
    ViewBag.Title = "Create a New Service";
}

<h2>Service Details</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model => Model.Id)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4"><h4>Service Name:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(Model => Model.ServiceName, new { style = "width:350px" })
                @Html.ValidationMessageFor(Model => Model.ServiceName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Short Description:</h4>     </div>
            <div class="col-md-8">
                @Html.TextAreaFor(Model => Model.ServiceDetails, new { style = "width:500px" })
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-4"><h4>Providing Organization:</h4>     </div>
            <div class="col-md-8">
                @Html.DropDownListFor(Model => Model.SelectedProviderId, Model.Providers)
                @Html.ValidationMessageFor(Model => Model.SelectedProviderId)
            </div>
        </div>
        @Html.HiddenFor(Model => Model.SelectedRecipientId, Model.Recipients)       
        <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
        @Html.ActionLink("Return to List", "index")
    </div>
}