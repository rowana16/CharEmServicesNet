@model CharEmServicesNet.Models.ViewModels.CreateProviderViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2"><h4>New Service Provider Name:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.OrganizationName)                
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Short Description:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Address 1:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Address1)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Address 2:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Address2)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>City:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.City)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>State:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.State)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Zip:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Zip)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Locations Available:</h4></div>
            <div class="col-md-10">
                @Html.ListBoxFor(x=>x.SelectedLocations, Model.Locations)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Select A Representative:</h4></div>
            <div class="col-md-10">
                @Html.ListBoxFor(x => x.UserId, Model.ProviderRep)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@Html.ActionLink("Back to List","index")
