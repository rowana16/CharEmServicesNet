@model CharEmServicesNet.Models.ViewModels.CreateProviderViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4"><h4>New Service Provider Name:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(Model => Model.OrganizationName, new { style = "width:350px" } )                
                @Html.ValidationMessageFor(Model => Model.OrganizationName)
                
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Short Description:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(Model => Model.Description, new { style = "width:350px" })
                @Html.ValidationMessageFor(Model => Model.OrganizationName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Address 1:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(Model => Model.Address1, new { style = "width:350px" })
                @Html.ValidationMessageFor(Model => Model.Address1)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Address 2:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(Model => Model.Address2, new { style = "width:350px" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>City:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(Model => Model.City, new { style = "width:350px" })
                @Html.ValidationMessageFor(Model => Model.City)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>State:</h4>     </div>
            <div class="col-md-8">
                @Html.ListBoxFor(Model => Model.State,Model.States)
                @Html.ValidationMessageFor(Model => Model.State)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Zip:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(Model => Model.Zip)
                @Html.ValidationMessageFor(Model => Model.Zip)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Locations Available:</h4></div>
            <div class="col-md-8">
                @Html.ListBoxFor(x=>x.SelectedLocations, Model.Locations, new { style = "width:250px" })
                @Html.ValidationMessageFor(Model => Model.SelectedLocations)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Select A Representative:</h4></div>
            <div class="col-md-8">
                @Html.DropDownListFor(x => x.UserId, Model.ProviderRep, new { style = "width:250px" })
                @Html.ValidationMessageFor(Model => Model.UserId)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@Html.ActionLink("Back to List","index")
