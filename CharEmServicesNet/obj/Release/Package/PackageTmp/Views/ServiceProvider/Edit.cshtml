@model CharEmServicesNet.Models.ViewModels.EditProviderViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model => Model.ProviderId)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2"><h4>Service Provider Name:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.OrganizationName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Short Description:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Address 1:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Address1)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Address 2:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Address2)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>City:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.City)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>State:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.State)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Zip:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Zip)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <h4>Current Locations:</h4>
                <h6>Select Locations to Remove</h6>
            </div>
            <div class="col-md-10">
                @Html.ListBoxFor(x => x.SelectedLocations, Model.Locations)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <h4>Other Locations:</h4>
                <h6>Select Locations to Add</h6>
            </div>
            <div class="col-md-10">
                @Html.ListBoxFor(x => x.SelectedAddLocations, Model.AddOtherLocations)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value=" Save Changes " class="btn btn-primary" />
            </div>
            <div class="col-md-offset-1 col-md-2">
                @Html.ActionLink("Cancel", "Details", new { id = Model.ProviderId }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
@Html.ActionLink("Back to List", "index")

