@model CharEmServicesNet.Models.ViewModels.LocationOperationViewModel
@{
    ViewBag.Title = "Location Details";
}

<h2>Edit Location</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4"><h4>Location Name:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(Model => Model.LocationName, new { style = "width:350px" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Short Description:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(Model => Model.LocationDescription, new { style = "width:500px" })
            </div>
        </div>     
      
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value=" Edit " class="btn btn-primary" />
            </div>
        </div>

        @Html.ActionLink("Return to List", "Index")

    </div>
}