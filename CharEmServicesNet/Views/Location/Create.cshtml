@model CharEmServicesNet.Models.ViewModels.LocationOperationViewModel
@{
    ViewBag.Title = "Create a New Location";
}

<h2>Create a New Location</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4"><h4>Location Name:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(x=>x.LocationName, new { style = "width:350px" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Short Description:</h4>     </div>
            <div class="col-md-8">
                @Html.TextBoxFor(x=> x.LocationDescription, new { style = "width:500px" })
            </div>
        </div>
        @*<div class="form-group">
                <div class="col-md-2"><h4>Service Type:</h4>     </div>
                <div class="col-md-10">
                    @Html.DropDownListFor(Model => Model.SelectedServiceTypeId, Model.ServiceType)
                </div>
            </div>*@
        
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
    @Html.ActionLink("Return to List","Index")
}