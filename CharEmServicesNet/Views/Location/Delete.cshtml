@model CharEmServicesNet.Models.ViewModels.LocationOperationViewModel
@{
    ViewBag.Title = "Delete Location";
}

<h2>Delete Location</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4"><h4>Service Name:</h4>     </div>
            <div class="col-md-8">
                @Html.DisplayFor(Model => Model.LocationName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Short Description:</h4>     </div>
            <div class="col-md-8">
                @Html.DisplayFor(Model => Model.LocationDescription)
            </div>
        </div>
        <h3> Are you sure you want to delete this Location? </h3>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Delete" class="btn btn-primary" />
                <h3></h3>
            </div>
        </div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
