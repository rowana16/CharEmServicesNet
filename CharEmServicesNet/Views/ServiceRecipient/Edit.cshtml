@model CharEmServicesNet.Models.ViewModels.CreateRecipientViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model => Model.RecipientId)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2"><h4>Service Recipient Name:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.OrganizationName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Short Description:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Address 1:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Address1)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Address 2:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Address2)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>City:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.City)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>State:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.State)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Zip:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.Zip)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value=" Edit " class="btn btn-primary" />
            </div>
        </div>

    </div>
}
