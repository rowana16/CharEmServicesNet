@model CharEmServicesNet.Models.ViewModels.LocationPartialViewModel
<div >
    <h4>Now Select Your Location:</h4>
    <hr />

    @for (var i = 0; i < Model.locations.Count; i = i + 2)
    {
        <div class="row">
            <div class="col-md-6">
                <h2 class="btn btn-primary locationBtn" id="@Model.locations[i].Id">@Model.locations[i].LocationName</h2>
            </div>
            @if (i + 1 < Model.locations.Count)
            {
                <div class="col-md-6">
                    <h2 class="btn btn-primary locationBtn" id="@Model.locations[i+1].Id">@Model.locations[i+1].LocationName</h2>
                </div>
            }
        </div>
    }
