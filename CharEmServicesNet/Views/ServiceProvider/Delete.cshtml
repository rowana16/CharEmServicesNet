@model CharEmServicesNet.Models.ViewModels.CreateProviderViewModel
@{
    ViewBag.Title = "Service Provider Details";
}

<h2>Service Provider Details</h2>



<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-2"><h4>New Service Provider Name:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.OrganizationName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Short Description:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.Description)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Address 1:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.Address1)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Address 2:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.Address2)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>City:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.City)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>State:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.State)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Zip:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.Zip)
        </div>
    </div>

    <h3> Are you sure you want to delete this Service Provder? </h3>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(i => i.ProviderId)
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value=" Delete " class="btn btn-primary" />
                <h3>@Html.ActionLink("Back to Service Providers", "Index")</h3>
            </div>
        </div>
    }


</div>


