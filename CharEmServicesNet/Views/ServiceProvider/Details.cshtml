@model CharEmServicesNet.Models.ViewModels.CreateProviderViewModel
@{
    ViewBag.Title = "Service Provider Details";
}

<h2>Service Provider Details</h2>

 

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-2"><h4>Service Provider Name:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.OrganizationName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Short Description:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.Description)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Address 1:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.Address1)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Address 2:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.Address2)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>City:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.City)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>State:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.State)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Zip:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.Zip)
        </div>
    </div>
    
    <h3>@Html.ActionLink("Edit","Edit", new { id = Model.ProviderId }, new { @class = "btn btn-primary" }) ||  @Html.ActionLink("Delete", "Delete", new { id = Model.ProviderId }, new { @class = "btn btn-primary" })</h3>

</div>


