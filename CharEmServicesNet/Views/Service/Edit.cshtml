@model CharEmServicesNet.Models.ViewModels.ServiceEditViewModel

@{
    ViewBag.Title = "Service Details";
}

<h2>Edit Service</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model => Model.SelectedServiceTypeId)
    @Html.HiddenFor(Model => Model.SelectedRecipientId)
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-2"><h4>Service Name:</h4>     </div>
        <div class="col-md-10">
            @Html.EditorFor(Model => Model.ServiceName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Short Description:</h4>     </div>
        <div class="col-md-10">
            @Html.EditorFor(Model => Model.ServiceDetails)
        </div>
    </div>
   
    
    <div class="form-group">
        <div class="col-md-2"><h4>Providers:</h4>     </div>
        <div class="col-md-10">
            <table>
                <tr>
                    <td>Current Provider:</td>
                    <td>@Html.DisplayFor(Model=>Model.CurrentProvider.OrganizationName)</td>
                </tr>
                <tr>
                    <td>Change Provider:</td>
                    <td>@Html.DropDownListFor(Model => Model.SelectedProviderId, Model.Providers)</td>
                </tr>
            </table>
           
        </div>
    </div>
    
    
    <div class="form-group">
        <div class="col-md-offset-3 col-md-10">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
    @Html.ActionLink("Return to List","index")

</div>
}