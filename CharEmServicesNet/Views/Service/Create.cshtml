@model CharEmServicesNet.Models.ViewModels.ServiceOperationViewModel
@{
    ViewBag.Title = "Service Details";
}

<h2>Service Details</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2"><h4>Service Name:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.ServiceName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><h4>Short Description:</h4>     </div>
            <div class="col-md-10">
                @Html.EditorFor(Model => Model.ServiceDetails)
            </div>
        </div>
        @*<div class="form-group">
            <div class="col-md-2"><h4>Service Type:</h4>     </div>
            <div class="col-md-10">
                @Html.DropDownListFor(Model => Model.SelectedServiceTypeId, Model.ServiceType)
            </div>
        </div>*@
        <div class="form-group">
            <div class="col-md-2"><h4>Current Providers:</h4>     </div>
            <div class="col-md-10">
                @Html.DropDownListFor(Model => Model.SelectedProviderId, Model.Providers)
            </div>
        </div>
        @Html.HiddenFor(Model => Model.SelectedRecipientId, Model.Recipients)       
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value=" Create " class="btn btn-primary" />
            </div>
        </div>
    </div>
}