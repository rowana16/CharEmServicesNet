@model CharEmServicesNet.Models.ViewModels.ServiceOperationViewModel
@{
    ViewBag.Title = "Delete Service";
}

<h2>Delete Service</h2>

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-2"><h4>Service Name:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.ServiceName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Short Description:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.ServiceDetails)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Service Type:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.ServiceType.FirstOrDefault().Text)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Current Providers:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.Providers)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2"><h4>Current Recipients:</h4>     </div>
        <div class="col-md-10">
            @Html.DisplayFor(Model => Model.Recipients)
        </div>
    </div>
</div>
