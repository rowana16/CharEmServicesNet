@model CharEmServicesNet.Models.ViewModels.ServiceEditViewModel
@{
    ViewBag.Title = "Delete Service";
}

<h2>Delete Service</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4"><h4>Service Name:</h4>     </div>
            <div class="col-md-8">
                @Html.DisplayFor(Model => Model.ServiceName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Short Description:</h4>     </div>
            <div class="col-md-8">
                @Html.DisplayFor(Model => Model.ServiceDetails)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"><h4>Current Provider:</h4>     </div>
            <div class="col-md-8">
                @Html.DisplayFor(Model => Model.CurrentProvider.OrganizationName)
            </div>
        </div>

        <h3> Are you sure you want to delete this Service? </h3>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
